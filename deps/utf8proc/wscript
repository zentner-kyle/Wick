#! /usr/bin/env python3
# encoding: utf-8

def options(opt):
    pass

def configure(conf):
    pass

def build(bld):
    bld(
            includes = '.',
            flags = ['-O3', '-std=c99', '-pedantic', '-Wall', '-fpic'],
            name = 'common',
            )
    bld.stlib(
            target = 'utf8proc',
            source = 'utf8proc.c',
            use = 'common'
            )
